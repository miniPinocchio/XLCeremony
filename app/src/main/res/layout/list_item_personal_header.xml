<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/list_item_header_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_action_github"
        />

    <TextView
        android:id="@+id/list_item_header_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/list_item_img"
        android:layout_centerVertical="true"
        android:layout_marginBottom="4dp"
        android:layout_toRightOf="@id/list_item_header_img"
        android:text="hello"
        android:textSize="16sp"
        />
    <ImageView
        android:id="@+id/list_item_back"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/list_item_header_img"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_action_arrow_right"/>


</RelativeLayout>