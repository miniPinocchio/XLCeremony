<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.liuhui.xlceremony.app.ui.activity.CardActivity"
    >

    <LinearLayout
        android:id="@+id/kaquan_statusbar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="vertical"
        android:background="#DF1135"

        ></LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#DF1135"
        >
        <ImageView
            android:id="@+id/card_back"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_back"

            />

<!--要给TabLayout设置固定宽度，不然会宽度会占满屏幕，点不到左边的返回箭头了-->
        <android.support.design.widget.TabLayout
            android:id="@+id/tab_kaquan"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:tabIndicatorColor="#fff"
            app:tabSelectedTextColor="#fff"
            app:tabIndicatorHeight="3dp"
            app:tabTextColor="#fff"
            app:tabPaddingStart="10dp"
            app:tabPaddingEnd="10dp"

            />


    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_kaquan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


</LinearLayout>
