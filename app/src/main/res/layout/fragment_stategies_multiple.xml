<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        >

    <include
            android:id="@+id/id_fragment_stategies"
            layout="@layout/fragment_stategies"
            />

    <include
            android:id="@+id/id_fragment_stategies_head"
            layout="@layout/fragment_stategies_head"
            />

    <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_fragment_stategies_tab"
            layout="@layout/fragment_stategies_tab"
            />

    <android.support.v4.view.ViewPager
            android:id="@+id/fragment_stategies_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
    </android.support.v4.view.ViewPager>
</LinearLayout>