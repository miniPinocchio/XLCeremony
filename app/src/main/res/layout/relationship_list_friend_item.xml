<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
        >

    <CheckBox
            android:id="@+id/contacts_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            />

    <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            >

        <TextView
                android:id="@+id/alpha"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="13dip"
                android:background="@color/lightblue"
                android:textColor="@color/white"
                android:visibility="gone"
                />

        <ImageView
                android:id="@+id/list_friend_person_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="5.0dip"
                android:src="@mipmap/github"
                android:layout_below="@id/alpha"
                />

        <TextView
                android:id="@+id/name"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2.0dip"
                android:layout_marginTop="6.0dip"
                android:layout_marginRight="5.0dip"
                android:singleLine="true"
                android:text="sss"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/list_friend_person_img"
                android:layout_alignTop="@id/list_friend_person_img"
                />

        <TextView
                android:id="@+id/number"
                android:textAppearance="?android:textAppearanceSmall"
                android:ellipsize="marquee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:layout_below="@id/name"
                android:layout_alignLeft="@id/name"
                android:text="sss"
                android:layout_alignWithParentIfMissing="true"
                />
    </RelativeLayout>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

        <ImageView
                android:id="@+id/list_friend_gift_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/list_icon_gift"
                android:layout_margin="5dp"
                />

        <ImageView
                android:id="@+id/list_friend_impress_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/list_icon_impress"
                android:layout_margin="5dp"
                />

        <TextView
                android:id="@+id/list_friend_impress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11"
                />

        <ImageView
                android:id="@+id/list_friend_score_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/list_icon_score"
                android:layout_margin="5dp"
                />

        <TextView
                android:id="@+id/list_friend_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11"
                />

    </LinearLayout>


</LinearLayout>